---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { BarChart3, TrendingUp, MapPin, AlertTriangle } from 'lucide-react';
---

<Layout 
  title="Mobile Theft Statistics UK | ProtectMyMobile"
  description="View statistics and data on mobile phone theft across the UK including hotspots, trends, and recovery rates."
>
  <Header />
  
  <main class="bg-[#f3f2f1]">
    <div class="container mx-auto px-4 py-6">
      <div class="mb-8">
        <h2 class="text-2xl font-bold mb-4 flex items-center">
          <BarChart3 class="h-7 w-7 mr-2 text-primary" />
          UK Mobile Theft Statistics
        </h2>
        <p class="text-neutral-700 mb-6">
          Data and insights on mobile phone theft trends across the United Kingdom.
        </p>
        
        <!-- Key Statistics Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
          <div class="bg-white rounded-lg shadow-md p-6">
            <div class="text-red-600 mb-2">
              <AlertTriangle class="h-8 w-8" />
            </div>
            <h3 class="text-3xl font-bold text-neutral-900 mb-1">200,000+</h3>
            <p class="text-neutral-600">Mobile phones stolen in UK annually</p>
            <p class="text-xs text-neutral-500 mt-2">Source: Met Police estimates</p>
          </div>
          
          <div class="bg-white rounded-lg shadow-md p-6">
            <div class="text-blue-600 mb-2">
              <TrendingUp class="h-8 w-8" />
            </div>
            <h3 class="text-3xl font-bold text-neutral-900 mb-1">26%</h3>
            <p class="text-neutral-600">Increase in theft over last 3 years</p>
            <p class="text-xs text-neutral-500 mt-2">Source: ONS Crime Survey</p>
          </div>
          
          <div class="bg-white rounded-lg shadow-md p-6">
            <div class="text-green-600 mb-2">
              <MapPin class="h-8 w-8" />
            </div>
            <h3 class="text-3xl font-bold text-neutral-900 mb-1">5%</h3>
            <p class="text-neutral-600">Recovery rate for stolen devices</p>
            <p class="text-xs text-neutral-500 mt-2">Source: Home Office data</p>
          </div>
          
          <div class="bg-white rounded-lg shadow-md p-6">
            <div class="text-purple-600 mb-2">
              <BarChart3 class="h-8 w-8" />
            </div>
            <h3 class="text-3xl font-bold text-neutral-900 mb-1">Â£500M</h3>
            <p class="text-neutral-600">Annual value of stolen devices</p>
            <p class="text-xs text-neutral-500 mt-2">Estimated market value</p>
          </div>
        </div>
        
        <!-- Top Hotspots -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
          <h3 class="text-xl font-semibold mb-4">Top Theft Hotspots in London</h3>
          <div class="space-y-3">
            <div class="flex justify-between items-center p-3 bg-red-50 rounded-md">
              <span class="font-medium">Westminster</span>
              <span class="text-red-700 font-semibold">~15,000 thefts/year</span>
            </div>
            <div class="flex justify-between items-center p-3 bg-orange-50 rounded-md">
              <span class="font-medium">Camden</span>
              <span class="text-orange-700 font-semibold">~8,500 thefts/year</span>
            </div>
            <div class="flex justify-between items-center p-3 bg-yellow-50 rounded-md">
              <span class="font-medium">Islington</span>
              <span class="text-yellow-700 font-semibold">~6,200 thefts/year</span>
            </div>
            <div class="flex justify-between items-center p-3 bg-neutral-50 rounded-md">
              <span class="font-medium">Hackney</span>
              <span class="text-neutral-700 font-semibold">~5,800 thefts/year</span>
            </div>
            <div class="flex justify-between items-center p-3 bg-neutral-50 rounded-md">
              <span class="font-medium">Tower Hamlets</span>
              <span class="text-neutral-700 font-semibold">~5,100 thefts/year</span>
            </div>
          </div>
          <p class="text-sm text-neutral-500 mt-4">Source: Metropolitan Police Service, 2024</p>
        </div>
        
        <!-- Time of Day -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
          <h3 class="text-xl font-semibold mb-4">Most Common Times for Theft</h3>
          <div class="space-y-3">
            <div>
              <div class="flex justify-between mb-1">
                <span class="text-sm font-medium">Evening Rush (5pm-7pm)</span>
                <span class="text-sm font-semibold">32%</span>
              </div>
              <div class="w-full bg-neutral-200 rounded-full h-2.5">
                <div class="bg-red-600 h-2.5 rounded-full" style="width: 32%"></div>
              </div>
            </div>
            <div>
              <div class="flex justify-between mb-1">
                <span class="text-sm font-medium">Late Night (10pm-2am)</span>
                <span class="text-sm font-semibold">28%</span>
              </div>
              <div class="w-full bg-neutral-200 rounded-full h-2.5">
                <div class="bg-orange-600 h-2.5 rounded-full" style="width: 28%"></div>
              </div>
            </div>
            <div>
              <div class="flex justify-between mb-1">
                <span class="text-sm font-medium">Morning Rush (7am-9am)</span>
                <span class="text-sm font-semibold">18%</span>
              </div>
              <div class="w-full bg-neutral-200 rounded-full h-2.5">
                <div class="bg-yellow-600 h-2.5 rounded-full" style="width: 18%"></div>
              </div>
            </div>
            <div>
              <div class="flex justify-between mb-1">
                <span class="text-sm font-medium">Afternoon (12pm-5pm)</span>
                <span class="text-sm font-semibold">15%</span>
              </div>
              <div class="w-full bg-neutral-200 rounded-full h-2.5">
                <div class="bg-green-600 h-2.5 rounded-full" style="width: 15%"></div>
              </div>
            </div>
            <div>
              <div class="flex justify-between mb-1">
                <span class="text-sm font-medium">Other Times</span>
                <span class="text-sm font-semibold">7%</span>
              </div>
              <div class="w-full bg-neutral-200 rounded-full h-2.5">
                <div class="bg-neutral-600 h-2.5 rounded-full" style="width: 7%"></div>
              </div>
            </div>
          </div>
          <p class="text-sm text-neutral-500 mt-4">Based on reported theft times to UK police forces</p>
        </div>
        
        <!-- Interactive Timelapse CTA -->
        <div class="bg-gradient-to-r from-purple-600 to-blue-600 rounded-lg shadow-lg p-8 text-white text-center">
          <h3 class="text-2xl font-bold mb-3">Explore Interactive Theft Hotspots</h3>
          <p class="mb-6 text-purple-100">
            View our interactive timelapse map showing theft patterns across UK locations over time.
          </p>
          <a href="/timelapse" class="inline-flex items-center justify-center rounded-md text-sm font-medium bg-white text-purple-600 hover:bg-purple-50 h-10 px-6 py-2">
            View Timelapse Map
          </a>
        </div>
      </div>
    </div>
  </main>
  
  <Footer />
</Layout>
