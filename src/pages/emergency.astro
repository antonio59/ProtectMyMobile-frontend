---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { AlertTriangle, Smartphone, Lock, Phone, CreditCard } from "lucide-react";
---

<Layout 
  title="Emergency Response - What To Do If Your Mobile Is Stolen | ProtectMyMobile"
  description="Immediate step-by-step actions to take if your mobile phone is stolen. Lock your device, block your SIM, contact your bank, and secure your accounts."
>
  <Header />
  
  <main class="bg-[#f3f2f1]">
    <div class="container mx-auto px-4 py-6">
      <!-- Emergency Header -->
      <div class="bg-[#d4351c] bg-opacity-10 rounded-lg p-6 mb-8 border-l-4 border-[#d4351c]">
        <h2 class="flex items-center text-2xl font-bold mb-2">
          <AlertTriangle class="h-6 w-6 mr-2 text-[#d4351c]" />
          Emergency Response Checklist
        </h2>
        <p class="text-neutral-700 mb-4">Follow these steps immediately if your mobile has been stolen:</p>
      </div>

      <!-- Emergency Steps -->
      <div class="space-y-6">
        <!-- Step 1: Lock Device -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex items-start">
            <div class="bg-[#d4351c] text-white rounded-full w-10 h-10 flex items-center justify-center font-bold text-lg mr-4 flex-shrink-0">
              1
            </div>
            <div class="flex-1">
              <h3 class="flex items-center text-xl font-semibold mb-2">Remotely Lock Your Device</h3>
              <p class="text-neutral-700 mb-4">Use another device to access your account and lock your mobile.</p>
              
              <div class="space-y-2">
                <a href="https://www.google.com/android/find" target="_blank" rel="noopener noreferrer" 
                   class="block p-3 border border-green-500 rounded-md hover:bg-green-50 transition-colors">
                  <div class="flex items-center">
                    <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center mr-3 font-bold">A</div>
                    <div>
                      <p class="font-medium">Lock Android Device</p>
                      <p class="text-sm text-neutral-600">Google Find My Device</p>
                    </div>
                  </div>
                </a>
                
                <a href="https://www.icloud.com/find" target="_blank" rel="noopener noreferrer"
                   class="block p-3 border border-gray-400 rounded-md hover:bg-gray-50 transition-colors">
                  <div class="flex items-center">
                    <div class="w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center mr-3 font-bold">i</div>
                    <div>
                      <p class="font-medium">Lock Apple Device</p>
                      <p class="text-sm text-neutral-600">iCloud Find My iPhone</p>
                    </div>
                  </div>
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Step 2: Change Passwords -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex items-start">
            <div class="bg-[#d4351c] text-white rounded-full w-10 h-10 flex items-center justify-center font-bold text-lg mr-4 flex-shrink-0">
              2
            </div>
            <div class="flex-1">
              <h3 class="flex items-center text-xl font-semibold mb-2">Change Critical Passwords</h3>
              <p class="text-neutral-700 mb-4">Immediately change passwords for:</p>
              <ul class="list-disc pl-5 text-neutral-700 space-y-1 mb-3">
                <li>Google/Apple account</li>
                <li>Email accounts</li>
                <li>Banking apps and payment services</li>
                <li>Social media accounts</li>
              </ul>
              <p class="text-sm text-neutral-600 italic">Use a different device and ensure you're on secure WiFi</p>
            </div>
          </div>
        </div>

        <!-- Step 3: Block SIM -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex items-start">
            <div class="bg-[#d4351c] text-white rounded-full w-10 h-10 flex items-center justify-center font-bold text-lg mr-4 flex-shrink-0">
              3
            </div>
            <div class="flex-1">
              <h3 class="flex items-center text-xl font-semibold mb-2">Contact Your Mobile Provider</h3>
              <p class="text-neutral-700 mb-4">Report the theft and block your SIM/number to prevent unauthorised use.</p>
              <a href="/mobile-providers" class="inline-flex items-center justify-center rounded-md text-sm font-medium bg-primary text-white hover:bg-primary/90 h-10 px-4 py-2">
                Find Your Provider
              </a>
            </div>
          </div>
        </div>

        <!-- Step 4: Report to Police -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex items-start">
            <div class="bg-[#d4351c] text-white rounded-full w-10 h-10 flex items-center justify-center font-bold text-lg mr-4 flex-shrink-0">
              4
            </div>
            <div class="flex-1">
              <h3 class="flex items-center text-xl font-semibold mb-2">Report to the Police</h3>
              <p class="text-neutral-700 mb-4">File a theft report with your local police and get a crime reference number.</p>
              <a href="https://www.police.uk/pu/contact-the-police/report-a-crime-incident/" target="_blank" rel="noopener noreferrer"
                 class="inline-flex items-center justify-center rounded-md text-sm font-medium bg-primary text-white hover:bg-primary/90 h-10 px-4 py-2 mr-3">
                Report to UK Police Online
              </a>
              <p class="text-sm text-neutral-600 mt-2">Or call 101 for non-emergency police assistance</p>
            </div>
          </div>
        </div>

        <!-- Step 5: Check Banks -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex items-start">
            <div class="bg-[#d4351c] text-white rounded-full w-10 h-10 flex items-center justify-center font-bold text-lg mr-4 flex-shrink-0">
              5
            </div>
            <div class="flex-1">
              <h3 class="flex items-center text-xl font-semibold mb-2">Check Your Bank Accounts</h3>
              <p class="text-neutral-700 mb-4">Monitor for unauthorised transactions and contact your bank immediately if you spot anything suspicious.</p>
              <a href="/banks" class="inline-flex items-center justify-center rounded-md text-sm font-medium bg-primary text-white hover:bg-primary/90 h-10 px-4 py-2">
                View UK Bank Emergency Contacts
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Additional Actions -->
      <div class="bg-white rounded-lg shadow-md p-6 mt-8">
        <h3 class="flex items-center text-xl font-semibold mb-4">After Immediate Steps</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="p-4 border border-primary rounded-md">
            <h4 class="font-medium mb-2">Report IMEI to Police</h4>
            <p class="text-neutral-700 text-sm">Provide your device's IMEI number when filing the police report (find by dialing *#06#).</p>
          </div>
          
          <div class="p-4 border border-primary rounded-md">
            <h4 class="font-medium mb-2">Contact Insurance Provider</h4>
            <p class="text-neutral-700 text-sm">If you have insurance, contact your provider with the police reference number.</p>
          </div>
          
          <div class="p-4 border border-primary rounded-md">
            <h4 class="font-medium mb-2">Monitor Bank Statements</h4>
            <p class="text-neutral-700 text-sm">Check for suspicious activity over the next few weeks.</p>
          </div>
          
          <div class="p-4 border border-primary rounded-md">
            <h4 class="font-medium mb-2">Enable Theft Alerts</h4>
            <p class="text-neutral-700 text-sm">Set up fraud alerts with your bank and credit reference agencies.</p>
          </div>
        </div>
      </div>
    </div>
  </main>
  
  <Footer />
</Layout>
