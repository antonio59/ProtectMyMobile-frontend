---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Shield, Home, Search } from 'lucide-react';
---

<Layout 
  title="Page Not Found | ProtectMyMobile"
  description="The page you are looking for does not exist. Return to ProtectMyMobile homepage."
>
  <Header />
  
  <main class="bg-[#f3f2f1] min-h-[70vh] flex items-center justify-center">
    <div class="container mx-auto px-4 py-12 text-center">
      <div class="bg-white rounded-2xl shadow-xl p-8 md:p-12 max-w-2xl mx-auto">
        <div class="inline-flex items-center justify-center p-4 bg-red-100 rounded-full mb-6">
          <Shield class="h-16 w-16 text-red-600" />
        </div>
        
        <h1 class="text-4xl md:text-6xl font-bold text-neutral-900 mb-4">404</h1>
        <h2 class="text-2xl font-semibold text-neutral-700 mb-6">Page Not Found</h2>
        
        <p class="text-lg text-neutral-600 mb-8 max-w-md mx-auto">
          Sorry, we couldn't find the page you're looking for. It might have been moved, deleted, or never existed.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/" 
            class="inline-flex items-center justify-center px-6 py-3 bg-primary text-white rounded-lg font-semibold hover:bg-primary/90 transition-colors"
          >
            <Home class="h-5 w-5 mr-2" />
            Back to Home
          </a>
          
          <a 
            href="/resources" 
            class="inline-flex items-center justify-center px-6 py-3 bg-white border-2 border-neutral-200 text-neutral-700 rounded-lg font-semibold hover:bg-neutral-50 transition-colors"
          >
            <Search class="h-5 w-5 mr-2" />
            Browse Resources
          </a>
        </div>
        
        <div class="mt-12 pt-8 border-t border-neutral-100 text-sm text-neutral-500">
          <p>If you believe this is an error, please <a href="/contact-us" class="text-primary hover:underline">contact us</a>.</p>
        </div>
      </div>
    </div>
  </main>
  
  <Footer />
</Layout>
