---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Button } from "@/components/ui/button";
import {
  Shield,
  Smartphone,
  AlertTriangle,
  ChevronRight,
  FileText,
  Book,
  Users,
  FileBarChart,
  Building2,
  Phone,
} from "lucide-react";
---

<Layout 
  title="Mobile Security & Theft Prevention Resource | ProtectMyMobile"
  description="ProtectMyMobile helps UK residents secure their mobile phones against theft, provides step-by-step emergency guidance, and offers comprehensive mobile security resources."
>
  <Header />
  
  <main class="bg-[#f3f2f1]">
    <div class="container mx-auto px-4 py-8">
      <!-- Hero section -->
      <section class="bg-white rounded-lg shadow-md p-6 mb-8">
        <div class="flex flex-col md:flex-row items-center">
          <div class="md:w-2/3 mb-6 md:mb-0 md:pr-8">
            <h1 class="text-3xl md:text-4xl font-bold mb-4 text-primary">
              Protect Your Mobile And Your Digital Life
            </h1>
            <p class="text-lg text-neutral-700 mb-6">
              ProtectMyMobile helps UK residents safeguard their mobile devices
              from theft and provides crucial guidance if your mobile is stolen.
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
              <a href="/prevention">
                <Button
                  size="lg"
                  className="bg-primary hover:bg-primary-dark text-white"
                  client:load
                >
                  <Shield className="mr-2 h-5 w-5" />
                  Protect Your Mobile
                </Button>
              </a>
              <a href="/emergency">
                <Button
                  size="lg"
                  variant="destructive"
                  client:load
                >
                  <AlertTriangle className="mr-2 h-5 w-5" />
                  Emergency Response
                </Button>
              </a>
            </div>
          </div>
          <div class="md:w-1/3 flex justify-center">
            <Shield className="h-40 w-40 text-primary" />
          </div>
        </div>
      </section>
      
      <!-- Main Navigation Bar -->
      <section class="bg-white rounded-lg shadow-md p-4 mb-8">
        <div class="grid grid-cols-4 gap-4">
          <a href="/prevention" class="flex flex-col items-center cursor-pointer hover:opacity-80 transition-opacity">
            <div class="w-12 h-12 rounded-full bg-white flex items-center justify-center border border-gray-200 mb-2">
              <Shield className="h-5 w-5 text-primary" />
            </div>
            <span class="text-sm text-center">Prevention</span>
          </a>
          
          <a href="/banks" class="flex flex-col items-center cursor-pointer hover:opacity-80 transition-opacity">
            <div class="w-12 h-12 rounded-full bg-white flex items-center justify-center border border-gray-200 mb-2">
              <Building2 className="h-5 w-5 text-primary" />
            </div>
            <span class="text-sm text-center">Banks</span>
          </a>
          
          <a href="/resources" class="flex flex-col items-center cursor-pointer hover:opacity-80 transition-opacity">
            <div class="w-12 h-12 rounded-full bg-white flex items-center justify-center border border-gray-200 mb-2">
              <Book className="h-5 w-5 text-primary" />
            </div>
            <span class="text-sm text-center">Resources</span>
          </a>
          
          <a href="/mobile-providers" class="flex flex-col items-center cursor-pointer hover:opacity-80 transition-opacity">
            <div class="w-12 h-12 rounded-full bg-white flex items-center justify-center border border-gray-200 mb-2">
              <Phone className="h-5 w-5 text-primary" />
            </div>
            <span class="text-sm text-center">Networks</span>
          </a>
          
          <a href="/emergency" class="flex flex-col items-center cursor-pointer hover:opacity-80 transition-opacity">
            <div class="w-12 h-12 rounded-full bg-white flex items-center justify-center border border-red-200 mb-2">
              <AlertTriangle className="h-5 w-5 text-red-500" />
            </div>
            <span class="text-sm text-center">Emergency</span>
          </a>
          
          <a href="/statistics" class="flex flex-col items-center cursor-pointer hover:opacity-80 transition-opacity">
            <div class="w-12 h-12 rounded-full bg-white flex items-center justify-center border border-gray-200 mb-2">
              <FileBarChart className="h-5 w-5 text-primary" />
            </div>
            <span class="text-sm text-center">Statistics</span>
          </a>
          
          <a href="/community-experiences" class="flex flex-col items-center cursor-pointer hover:opacity-80 transition-opacity">
            <div class="w-12 h-12 rounded-full bg-white flex items-center justify-center border border-gray-200 mb-2">
              <Users className="h-5 w-5 text-primary" />
            </div>
            <span class="text-sm text-center">Experiences</span>
          </a>
          
          <a href="/about-us" class="flex flex-col items-center cursor-pointer hover:opacity-80 transition-opacity">
            <div class="w-12 h-12 rounded-full bg-white flex items-center justify-center border border-gray-200 mb-2">
              <FileText className="h-5 w-5 text-primary" />
            </div>
            <span class="text-sm text-center">About Us</span>
          </a>
        </div>
      </section>

      <!-- Key sections grid -->
      <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-200">
          <div class="text-primary mb-4 text-3xl">
            <Shield className="h-10 w-10" />
          </div>
          <h2 class="text-xl font-semibold mb-2">Prevention Guides</h2>
          <p class="text-neutral-700 mb-4">
            Learn how to secure your device with PIN locks, biometric security,
            and app-specific protection.
          </p>
          <a href="/prevention" class="text-primary font-medium flex items-center hover:underline">
            View Prevention Guides <ChevronRight className="ml-2 h-4 w-4" />
          </a>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-200">
          <div class="text-[#d4351c] mb-4 text-3xl">
            <AlertTriangle className="h-10 w-10" />
          </div>
          <h2 class="text-xl font-semibold mb-2">Emergency Response</h2>
          <p class="text-neutral-700 mb-4">
            Step-by-step instructions to take immediate action if your mobile has
            been stolen.
          </p>
          <a href="/emergency" class="text-[#d4351c] font-medium flex items-center hover:underline">
            View Emergency Actions <ChevronRight className="ml-2 h-4 w-4" />
          </a>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-200">
          <div class="text-primary mb-4 text-3xl">
            <Smartphone className="h-10 w-10" />
          </div>
          <h2 class="text-xl font-semibold mb-2">IMEI Registration</h2>
          <p class="text-neutral-700 mb-4">
            Store your device's IMEI number securely to help with recovery if
            your mobile is stolen.
          </p>
          <a href="/prevention" class="text-primary font-medium flex items-center hover:underline">
            Register Your IMEI <ChevronRight className="ml-2 h-4 w-4" />
          </a>
        </div>
      </section>

      <!-- Additional resources -->
      <section class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex items-center mb-4">
            <FileText className="h-6 w-6 text-primary mr-2" />
            <h2 class="text-xl font-semibold">UK Bank Directory</h2>
          </div>
          <p class="text-neutral-700 mb-4">
            Access emergency contact details and specific procedures for all
            major UK banks if your mobile is stolen.
          </p>
          <a href="/banks">
            <Button
              className="bg-primary hover:bg-primary-dark text-white"
              client:load
            >
              View Bank Directory
            </Button>
          </a>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex items-center mb-4">
            <Phone className="h-6 w-6 text-primary mr-2" />
            <h2 class="text-xl font-semibold">Mobile Network Directory</h2>
          </div>
          <p class="text-neutral-700 mb-4">
            Access emergency contact details and procedures for all major UK mobile 
            network providers to block your SIM if your phone is stolen.
          </p>
          <a href="/mobile-providers">
            <Button
              className="bg-primary hover:bg-primary-dark text-white"
              client:load
            >
              View Mobile Networks
            </Button>
          </a>
        </div>
      </section>

      <!-- CTA Banner -->
      <section class="border-2 border-primary rounded-lg p-6 mb-8 bg-gradient-to-r from-white to-gray-50">
        <div class="flex flex-col md:flex-row items-center">
          <div class="flex-1 mb-4 md:mb-0 md:mr-6">
            <h3 class="text-xl font-semibold mb-2 text-primary">
              How secure is your mobile?
            </h3>
            <p class="text-neutral-700">
              Complete our quick assessment to identify security gaps and get
              personalised recommendations.
            </p>
          </div>
          <div>
            <a href="/security-checkup">
              <Button
                className="bg-primary hover:bg-primary-dark text-white"
                client:load
              >
                Start Security Checkup
              </Button>
            </a>
          </div>
        </div>
      </section>
    </div>
  </main>
  
  <Footer />
</Layout>
