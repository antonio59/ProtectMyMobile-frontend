---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SecurityCheckup from '../components/SecurityCheckup';
import { ShieldCheck } from 'lucide-react';
---

<Layout 
  title="Security Checkup - Assess Your Mobile Security | ProtectMyMobile"
  description="Take our interactive security assessment to identify vulnerabilities and get personalised recommendations for protecting your mobile device."
>
  <Header />
  
  <main class="bg-[#f3f2f1]">
    <div class="container mx-auto px-4 py-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-8">
          <h1 class="flex items-center justify-center text-4xl font-bold mb-4">
            <ShieldCheck class="h-10 w-10 mr-3 text-primary" />
            Mobile Security Checkup
          </h1>
          <p class="text-xl text-neutral-600 max-w-2xl mx-auto">
            Answer 12 quick questions to discover how secure your phone really is and get personalised recommendations.
          </p>
        </div>
        
        <SecurityCheckup client:load />
      </div>
    </div>
  </main>
  
  <Footer />
</Layout>
