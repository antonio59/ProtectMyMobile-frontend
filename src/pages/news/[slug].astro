    color: #1e40af;
  }
  
  .prose blockquote {
    border-left: 4px solid #1d4ed8;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #4b5563;
    background: #f3f4f6;
    padding: 1.5rem;
    border-radius: 0.5rem;
  }
  
  .prose strong {
    font-weight: 700;
    color: #111827;
  }
  
  .prose hr {
    margin: 2.5rem 0;
    border: none;
    border-top: 2px solid #e5e7eb;
  }
  
  .prose code {
    background: #f3f4f6;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
    font-family: monospace;
  }
  
  .prose em {
    font-style: italic;
    color: #4b5563;
  }
</style>
