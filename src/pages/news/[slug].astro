---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getNewsPosts, getNewsPostBySlug } from '@/lib/supabase';
import { Calendar, ExternalLink, ArrowLeft } from 'lucide-react';
import { marked } from 'marked';

// Configure marked for better rendering
marked.setOptions({
  breaks: true,
  gfm: true,
});

// Required for static builds - generate paths for all published news posts
export async function getStaticPaths() {
  try {
    const posts = await getNewsPosts(true); // Get published posts only
    return posts.map((post) => ({
      params: { slug: post.slug },
    }));
  } catch (error) {
    console.error('Error generating static paths for news:', error);
    // Return empty array if no posts or error - won't generate any pages
    return [];
  }
}

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/news');
}

let post;
let error = null;

try {
  post = await getNewsPostBySlug(slug);
} catch (e) {
  error = e;
  console.error('Error fetching news post:', e);
}

if (!post) {
  return Astro.redirect('/news');
}

// Convert markdown to HTML
const contentHtml = marked.parse(post.content || '');

const categoryColors: Record<string, string> = {
  arrest: 'bg-red-100 text-red-800',
  seizure: 'bg-blue-100 text-blue-800',
  law_change: 'bg-purple-100 text-purple-800',
  statistics: 'bg-green-100 text-green-800',
  prevention_tip: 'bg-yellow-100 text-yellow-800',
  other: 'bg-gray-100 text-gray-800',
};

function formatDate(dateString: string) {
  return new Date(dateString).toLocaleDateString('en-GB', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  });
}
---

<Layout 
  title={`${post.title} | ProtectMyMobile`}
  description={post.excerpt}
>
  <Header />
  
  <main class="bg-[#f3f2f1]">
    <div class="container mx-auto px-4 py-8">
      <div class="max-w-4xl mx-auto">
        <!-- Back Link -->
        <a href="/news" class="inline-flex items-center text-primary hover:underline mb-6">
          <ArrowLeft class="h-4 w-4 mr-2" />
          Back to News
        </a>
        
        <!-- Article -->
        <article class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="p-8">
            <!-- Source -->
            {post.source_url && (
              <div class="mb-4 text-xs text-neutral-500">
                <a href={post.source_url} target="_blank" rel="noopener noreferrer" class="text-primary hover:underline inline-flex items-center font-medium">
                  Source: {post.source_name || 'External Link'}
                  <ExternalLink class="h-3 w-3 ml-1" />
                </a>
              </div>
            )}
            
            <!-- Content -->
            <article class="prose prose-neutral max-w-none prose-headings:text-neutral-900 prose-h1:text-2xl prose-h1:mt-0 prose-h1:mb-4 prose-h2:text-xl prose-h2:border-b prose-h2:border-neutral-200 prose-h2:pb-2 prose-h2:mt-6 prose-h2:mb-3 prose-a:text-primary prose-strong:text-neutral-900 prose-strong:font-bold prose-li:marker:text-primary">
              <div set:html={contentHtml} />
            </article>
          </div>
        </article>
        
        <!-- Related/Back CTA -->
        <div class="mt-8 bg-white rounded-lg shadow-md p-6 text-center">
          <p class="text-neutral-700 mb-4">
            Stay informed about the latest mobile theft news and updates.
          </p>
          <a href="/news" class="inline-flex items-center justify-center rounded-md text-sm font-medium bg-primary text-white hover:bg-primary/90 h-10 px-6 py-2">
            View All News
          </a>
        </div>
      </div>
    </div>
  </main>
  
  <Footer />
</Layout>

<style>
