    color: #374151;
    font-size: 1.125rem;
    line-height: 1.75;
  }
  
  .prose h1, .prose h2, .prose h3, .prose h4 {
    color: #111827;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }
  
  .prose h1 {
    font-size: 1.875rem;
    margin-top: 0;
    margin-bottom: 1rem;
  }
  
  .prose h2 {
    font-size: 1.5rem;
    border-bottom: 2px solid #e5e7eb;
    padding-bottom: 0.5rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .prose h3 {
    font-size: 1.5rem;
  }
  
  .prose p {
    margin-bottom: 1.5rem;
    line-height: 1.75;
  }
  
  .prose ul {
    list-style-type: disc;
    margin-bottom: 1.5rem;
    margin-top: 1rem;
    padding-left: 2rem;
  }
  
  .prose ol {
    list-style-type: decimal;
    margin-bottom: 1.5rem;
    margin-top: 1rem;
    padding-left: 2rem;
  }
  
  .prose li {
    margin-bottom: 0.75rem;
    padding-left: 0.5rem;
    line-height: 1.75;
  }
  
  .prose li::marker {
    color: #1d4ed8;
    font-weight: 600;
  }
  
  .prose a {
    color: #1d4ed8;
    text-decoration: underline;
    font-weight: 500;
  }
  
