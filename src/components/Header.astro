---
import { Button } from "@/components/ui/button";
import { AlertTriangle, ShieldQuestion } from "lucide-react";
---

<header class="bg-white shadow-md">
  <div class="container mx-auto px-4 py-4 flex flex-col md:flex-row items-center justify-between">
    <a href="/" class="flex items-center mb-4 md:mb-0 cursor-pointer">
      <div class="mr-2">
        <svg class="h-10 w-10" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
          <circle cx="50" cy="50" r="45" fill="#2563eb" opacity="0.1"/>
          <path d="M50 15 L30 30 L30 60 C30 70 40 80 50 85 C60 80 70 70 70 60 L70 30 Z" fill="#2563eb"/>
          <path d="M45 50 L42 53 L48 59 L58 45" stroke="white" stroke-width="3" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
      <h1 class="text-2xl font-bold text-primary">ProtectMyMobile</h1>
    </a>
    <div class="w-full md:w-auto flex flex-col md:flex-row space-y-2 md:space-y-0 md:space-x-3">
      <a href="/security-checkup">
        <Button 
          variant="outline" 
          size="lg"
          className="w-full md:w-auto font-medium text-lg transition-colors duration-200 border-primary text-primary hover:bg-primary hover:text-white"
          client:load
        >
          <ShieldQuestion className="mr-2 h-5 w-5" />
          Security Checkup
        </Button>
      </a>
      <a href="/emergency">
        <Button 
          variant="destructive" 
          size="lg"
          className="w-full md:w-auto text-white font-bold text-lg transition-colors duration-200"
          client:load
        >
          <AlertTriangle className="mr-2 h-5 w-5" />
          My Mobile Was Just Stolen
        </Button>
      </a>
    </div>
  </div>
</header>
