---
import { Shield, AlertTriangle } from 'lucide-react';
---

<header class="bg-white shadow-md sticky top-0 z-50">
  <div class="container mx-auto px-4 py-4 flex flex-col md:flex-row items-center justify-between gap-4">
    <div class="flex items-center w-full md:w-auto">
      <!-- Logo -->
      <a href="/" class="flex items-center flex-1 md:flex-initial cursor-pointer hover:opacity-80 transition-opacity group">
        <div class="mr-2 bg-primary/10 p-2 rounded-lg group-hover:bg-primary/20 transition-colors">
          <Shield class="h-8 w-8 sm:h-8 sm:w-8 text-primary" />
        </div>
        <h1 class="text-xl sm:text-2xl font-bold text-primary tracking-tight">ProtectMyMobile</h1>
      </a>
    </div>

    <!-- CTA Buttons -->
    <div class="w-full md:w-auto flex flex-col sm:flex-row gap-3">
      <!-- Emergency FIRST on mobile (most critical action) -->
      <a 
        href="/emergency"
        class="inline-flex items-center justify-center px-5 py-2.5 bg-red-600 text-white rounded-lg font-bold hover:bg-red-700 transition-colors text-sm sm:text-base order-1 sm:order-2 shadow-sm hover:shadow-md gap-2"
      >
        <AlertTriangle class="h-4 w-4" />
        Phone Stolen?
      </a>
      <a 
        href="/security-checkup"
        class="inline-flex items-center justify-center px-5 py-2.5 border-2 border-primary text-primary rounded-lg font-semibold hover:bg-primary hover:text-white transition-colors text-sm sm:text-base order-2 sm:order-1 gap-2"
      >
        <Shield class="h-4 w-4" />
        Security Checkup
      </a>
    </div>
  </div>
</header>
